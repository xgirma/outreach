{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend app for outreach",
  "main": "dist",
  "scripts": {
    "prestart": "npm run -s build",
    "build": "babel src -s -D -d dist --preset es2015,stage-0",
    "start:dev": "NODE_ENV=developement DEBUG=express* nodemon -w src --exec \"babel-node src --preset es2015,stage-0\"",
    "start:prod": "NODE_ENV=production pm2 start dist",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch --coverage",
    "lint": "eslint src --fix",
    "pretty": "./node_modules/.bin/prettier --arrow-parens always --write \"./src/**/*.{js,json}\"",
    "precommit": "lint-staged husky --dev"
  },
  "keywords": [
    "church",
    "Ethiopia",
    "orthodox"
  ],
  "author": "Girma Nigusse <xgirma@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "boom": "^7.2.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-validator": "^5.2.0",
    "faker": "^4.1.0",
    "moment": "^2.22.1",
    "mongoose": "^5.1.1",
    "swagger-ui-express": "^3.0.9",
    "validator": "^10.2.0",
    "winston": "^2.4.2",
    "winston-mongodb": "^3.0.2"
  },
  "lint-staged": {
    "*": [
      "prettier --write",
      "npm run lint",
      "npm run pretty"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "jest-cli": "^22.4.3",
    "lint-staged": "^7.1.0",
    "nodemon": "^1.17.4",
    "prettier": "1.12.1"
  },
  "engines": {
    "node": ">=6.11.0"
  }
}
